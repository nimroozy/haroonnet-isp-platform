# HaroonNet ISP Platform Environment Configuration

# Application Settings
NODE_ENV=development
# IMPORTANT: Generate a secure random JWT secret for production!
# You can generate one with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_IN_PRODUCTION

# MySQL Database Configuration
# IMPORTANT: Use strong passwords in production!
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MYSQL_DATABASE=haroonnet
MYSQL_USER=haroonnet
MYSQL_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# RADIUS Database Configuration
RADIUS_DB_NAME=radius
RADIUS_DB_USER=radius
RADIUS_DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration
# Set a strong password for Redis in production
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Grafana Configuration
GRAFANA_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (Twilio example)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Company Information
COMPANY_NAME=HaroonNet ISP
COMPANY_EMAIL=admin@haroonnet.com
COMPANY_PHONE=+93-123-456-789
COMPANY_ADDRESS=Kabul, Afghanistan
COMPANY_TIMEZONE=Asia/Kabul
DEFAULT_CURRENCY=AFN

# CoA Configuration
COA_SECRET=shared-secret-for-coa
COA_PORT=3799

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=haroonnet-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Monitoring
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=90

# Debug and Logging
DEBUG_MODE=false
LOG_LEVEL=info
